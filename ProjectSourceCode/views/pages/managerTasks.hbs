<title> Manager Tasks </title>
<style>
  .container {
    width: 33.33%; 
    height: 90%; 
    background-color: black;
    float: left; 
  }
  .col-sm {
    text-align: center;
    display: flex;
    flex-direction: column;
    top: 50;
  }
</style>
<script src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"></script>




<div class="container">
  <div class="row" color="red">
    <div class="col-sm">
      <button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#create-task">Create Task</button>
      <button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#update-task">Update Task</button>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#delete-task">Delete Task</button>
    </div>
  </div>
</div>
<div class="col-60">
  Below is a list of employyees registered in your orginization:
  {{#each users}}
    <li>{{this.firstname}} {{this.lastname}}</li>
  {{/each}}
</div>





<div class="modal fade" id="create-task" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="create-event-title">Create Task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/createEmployeeTask" method="post">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Employee:</label>
              <select class="form-select">
                <option selected>Select an Employee</option>
                {{#each users}}
                  <option value="{{this.username}}">{{this.firstname}} {{this.lastname}}</option>
                {{/each}}
              </select>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Task Name:</label>
            <input type="text" class="form-control" id="taskName">
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Task Description:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Disguard</button>
        <button type="submit" class="btn btn-primary">Assign Task</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="update-task" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="update-event-title">Update Task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Employee:</label>
              <select class="form-select">
                <option selected>Select an Employee</option>
                <option value="1">Employee One</option>
                <option value="2">Employee Two</option>
                <option value="3">Employee Three</option>
              </select>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Task Name:</label>
              <select class="form-select">
                <option selected>Select a Task</option>
                <option value="1">Task One</option>
                <option value="2">Task Two</option>
                <option value="3">Task Three</option>
              </select>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Update Task Description:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Disguard</button>
        <button type="button" class="btn btn-primary">Update Task</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="delete-task" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-event-title">Delete Task</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Employee:</label>
              <select class="form-select">
                <option selected>Select an Employee</option>
                <option value="1">Employee One</option>
                <option value="2">Employee Two</option>
                <option value="3">Employee Three</option>
              </select>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Task Name:</label>
              <select class="form-select">
                <option selected>Select a Task</option>
                <option value="1">Task One</option>
                <option value="2">Task Two</option>
                <option value="3">Task Three</option>
              </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Disguard</button>
        <button type="button" class="btn btn-danger">Delete Task</button>
      </div>
    </div>
  </div>
</div>