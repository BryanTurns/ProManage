
<title> Manager Tasks </title>
<style>
  .container { width: 33.33%; height: 90%; background-color: black; float: left;
  } .col-sm { text-align: center; display: flex; flex-direction: column; top:
  50; }
</style>
<script
  src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.js"
></script>

<div class="container">
  <div class="row" color="red">
    <div class="col-sm">
      <button
        type="button"
        class="btn btn-primary mb-2"
        data-toggle="modal"
        data-target="#create-task"
      >Create Task</button>
      <button
        type="button"
        class="btn btn-primary mb-2"
        data-toggle="modal"
        data-target="#update-task"
      >Update Task</button>
      <button
        type="button"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#delete-task"
      >Delete Task</button>
    </div>
  </div>
</div>
<div class="col-60">
  Below is a list of employyees registered in your orginization:
  {{#each users}}
    <li>{{this.firstname}} {{this.lastname}}</li>
  {{/each}}
</div>

<div
  class="modal fade"
  id="create-task"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="create-event-title">Create Task</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <form action="/createEmployeeTask" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Employee:</label>
            <select class="form-select" name="employee" id="employee">
              <option selected>Select an Employee</option>
              {{#each users}}
                <option value="{{this.username}}">{{this.firstname}}
                  {{this.lastname}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Task Name:</label>
            <input
              type="text"
              class="form-control"
              id="taskName"
              name="taskName"
            />
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Task Description:</label>
            <textarea
              class="form-control"
              id="message-text"
              name="description"
            ></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-dismiss="modal"
          >Disguard</button>
          <button type="submit" class="btn btn-primary">Assign Task</button>
        </div>
      </form>

    </div>
  </div>
</div>

<div
  class="modal fade"
  id="update-task"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="update-event-title">Update Task</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Employee:</label>
            <select class="form-select" id="employeeSelect">
              <option selected>Select an Employee</option>
              {{#each users}}
                <option value="{{this.username}}">{{this.firstname}}
                  {{this.lastname}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="taskSelect" class="col-form-label">Task Name:</label>
            <select class="form-select" id="taskSelect">
              <option selected>Please Select an employee!</option>
            </select>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Update Task
              Description:</label>
            <textarea class="form-control" id="message-text"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Disguard</button>
        <button type="button" class="btn btn-primary">Update Task</button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="delete-task"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="delete-event-title">Delete Task</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="delete-task">
        <form>
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Employee:</label>
            <select class="form-select" id="employeeSelect">
              <option selected>Select an Employee</option>
              {{#each users}}
                <option value="{{this.username}}">{{this.firstname}}
                  {{this.lastname}}</option>
              {{/each}}
            </select>
          </div>
          <div class="form-group">
            <label for="taskSelect" class="col-form-label">Task Name:</label>
            <select class="form-select" id="taskSelect">
              <option selected>Please Select an employee!</option>
            </select>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Disguard</button>
        <button type="button" class="btn btn-danger">Delete Task</button>
      </div>
    </div>
  </div>
</div>

<script>
  document.getElementById('employeeSelect').addEventListener('change', function() {
    const username = this.value;
    fetch(`/getListofEmployeeTasks?username=${(username)}`)
    .then(response => response.json())
    .then(tasks => {
      const taskSelect = document.getElementById('taskSelect');
      taskSelect.innerHTML = '';  //This clears the original Slelction
      if (tasks.length === 0) 
      {
         taskSelect.innerHTML = '<option>There are no tasks available</option>';
      } 
      else 
      {
        tasks.forEach(task => {
          const option = new Option(task.taskname, task.taskid);
          taskSelect.add(option);
        });
      }
    })
  });
</script>
